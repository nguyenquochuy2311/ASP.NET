@{
    MyOrder order = ViewBag.Order;
    int order_id = order.Order_id;
    int invoice_no = order.Invoice_no;
    int due_amount = order.Due_amount;
}
<div class="container">
    <div class="col-md-3">@Html.Partial("~/Views/MyAccount/SidebarAccount.cshtml")</div>
    <div class="col-md-9">
        <div class="box">
            <h1 align="center"> Xác nhận thanh toán </h1>
            <form action="/MyAccount/MyOrder_Confirm_Send?order_id=@order_id" method="post"
                  enctype="multipart/form-data">
                <div class="form-group">
                    <label> Mã hoá đơn </label>
                    <input type="text" class="form-control" name="Invoice_no" value="@invoice_no" required>
                </div>

                <div class="form-group">
                    <label> Số tiền gửi</label>
                    <input type="text" class="form-control" name="Amount" value="@due_amount" required>
                </div>

                <div class="form-group">
                    <label> Hình thức thanh toán</label>
                    <input type="text" class="form-control" value="Thanh toán khi nhận hàng" />
                </div>
                <div class="form-group">
                    <label> Ngày thanh toán</label>
                    <input type="date" class="form-control" name="Payment_date" required>
                </div>

                <div class="text-center">
                    <button class="btn btn-primary btn-lg" name="confirm_payment">
                        <i class="fa fa-user-md"></i> Xác nhận thanh toán
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>