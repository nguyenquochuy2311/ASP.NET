@using mvcproject
@{
    ViewData["Title"] = "Cart Page";
}
<!--Bat dau content cua san pham-->
<div id="content">
    <div class="container">
        <div class="col-md-12">
            <ul class="breadcrumb">
                <!--Thu tu trang-->
                <li>
                    <a href="/">Trang chủ</a>
                </li>
                <li>
                    Giỏ hàng
                </li>
            </ul>
        </div>
        <div id="cart" class="col-md-9">
            <div class="box">
                <form action="#" method="post" enctype="multipart/form-data">
                    <h1>Giỏ hàng của bạn</h1>

                    <p class="text-muted">0 sản phẩm ở hiện tại</p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th colspan="2">Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Kích cỡ</th>
                                    <th colspan="1">Xoá</th>
                                    <th colspan="2">Giá tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                


                            </tbody>

                                <tfoot>
                                    <tr>
                                        <th colspan="5">Tổng tiền</th>
                                        <th colspan="2">0 <u>đ</u></th>
                                    </tr>
                                </tfoot>

                            </table>
                    </div>

                    <div class="box-footer">
                        <div class="pull-left">
                            <a href="#" class="btn btn-default">
                                <i class="fa fa-fa-chevron-circle-left"></i>Quay lại cửa hàng
                            </a>
                        </div>

                        <div class="pull-right">
                            <button id="update" type="submit" name="update" value="Cập nhật giỏ hàng"
                                    class="btn btn-default">
                                <i class="fa fa-refresh"></i>Cập nhật giỏ hàng
                            </button>

                            <a href="#" class="btn btn-primary">
                                Tiến hành thanh toán <i class="fa fa-chevron-right"></i>
                            </a>
                        </div>
                    </div>
                </form>
            </div>

            <div id="row same-heigh-row">
                <div class="col-md-3 col-sm-6">
                    <div class="box same-height headline">
                        <h3 class="text-center">Sản phẩm liên quan</h3>
                    </div>
                </div>
                @foreach (var item in (List<Product>)ViewBag.ProductOffer)
                {
                    <div class="col-md-3 col-sm-6 center-responsive">
                        <div class="product same-height">
                            <a href="/Detail/Index?pro_id=@item.Product_id">
                                <img class="img-responsive" src="~/product_images/@item.Product_img" alt="Product @item.Product_id">
                            </a>

                            <div class="text">
                                <h3>
                                    <a href="/Detail/Index?pro_id=@item.Product_id"> @item.Product_title </a>
                                </h3>
                                <p class="price"><strong>@item.Product_price <u>đ</u></strong></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-3">
            <div id="order-summary" class="box">
                <div class="box-header">
                    <h3>Tổng tiền đơn hàng</h3>
                </div>

                <p class="text-muted">
                    Đã tính bao gồm thuế và phí vận chuyển
                </p>

                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td> Tổng đơn hàng </td>
                                <th> 0 </th>
                            </tr>
                            <tr>
                                <td> Phí vận chuyển và ship </td>
                                <td> 1.000 </td>
                            </tr>
                            <tr>
                                <td> Thuế </td>
                                <th> 2.000 </th>
                            </tr>
                            <tr class="total">
                                <td> Tổng </td>
                                <th> 0 </th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<!--Ket thuc content cua san pham-->
