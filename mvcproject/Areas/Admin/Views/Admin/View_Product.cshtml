@using mvcproject.Areas.Admin.Models;
@using mvcproject.Models;

@{
    ViewData["Title"] = "Admin Page";
    Layout = "_Admin";
}

@{
    Admin item = (Admin)ViewData["admin"];
}

@{
    List<Product> products = (List<Product>)ViewData["get_product"];
}

@if (ViewData["chk_addproduct"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert('Them thanh cong');
        };
    </script>
}

@if (ViewData["chk_updateproduct"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert('Cap nhat thanh cong');
        };
    </script>
}

@if (ViewData["chk_deleteproduct"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert('Xoa thanh cong');
        };
    </script>
}

<div id="wrapper">
    @Html.Partial("Sidebar")

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-dashboard"></i> Bảng điều khiển / Xem thông tin sản phẩm
                        </li>
                    </ol>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">

                            <h3 class="panel-title">
                                <i class="fa fa-tags"></i> Xem thông tin sản phẩm
                            </h3>

                        </div>

                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th> STT </th>
                                            <th> Tên </th>
                                            <th> Hình ảnh </th>
                                            <th> Giá </th>
                                            <th> Ngày nhập </th>
                                        </tr>
                                    </thead>

                                    <tbody>

                                        @{
                                            int i = 0;
                                        }
                                        @foreach (var item_product in products)
                                        {
                                            i++;
                                            <tr>
                                                <td> @i </td>
                                                <td> @item_product.Product_title </td>
                                                <td> <img src="~/product_images/@item_product.Product_img" width="60" height="60"></td>
                                                <td> @item_product.Product_price </td>
                                                <td> @item_product.Date </td>
                                                <td>
                                                    <a href="/Admin/Admin/Delete_Product?pro_id=@item_product.Product_id">
                                                        <i class="fa fa-trash-o"></i> Xoá
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/Admin/Admin/Update_Product?pro_id=@item_product.Product_id">
                                                        <i class="fa fa-pencil"></i> Sửa
                                                    </a>
                                                </td>
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/boostrap-337.js"></script>
<script src="~/js/jquery-331.js"></script>